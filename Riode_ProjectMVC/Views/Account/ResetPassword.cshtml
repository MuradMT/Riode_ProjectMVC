

@{
    ViewData["Title"] = "ResetPassword";
}
@model ResetPasswordVM
<div class="login-popup mx-auto">
    <div class="form-box">
        <div class="tab tab-nav-simple tab-nav-boxed form-tab">
            <ul class="nav nav-tabs nav-fill align-items-center border-no justify-content-center mb-5" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active border-no lh-1 ls-normal" href="#signin">Confirm Code</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="signin">
                    <form method="post" asp-action="ResetPassword">
                        <div class="form-group mb-3">
                            <input asp-for="NewPassword" class="form-control" id="singin-email" placeholder=NewPassword required />
                        </div>
                        <div class="form-group">
                            <input asp-for="ConfirmPassword" class="form-control" id="singin-email" placeholder=ConfirmPassword required />
                        </div>
                        <button class="btn btn-dark btn-block btn-rounded" type="submit">Confirm</button>
                    </form>
                    <div class="form-choice text-center">
                        <label class="ls-m">or Login With</label>
                        <div class="social-links">
                            <a href="#" class="social-link social-google fab fa-google border-no"></a>
                            <a href="#" class="social-link social-facebook fab fa-facebook-f border-no"></a>
                            <a href="#" class="social-link social-twitter fab fa-twitter border-no"></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>








