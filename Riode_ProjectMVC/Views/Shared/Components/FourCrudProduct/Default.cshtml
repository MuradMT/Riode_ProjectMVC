@model ICollection<Product>
<section class="product-widget-wrapper pb-2 pb-md-10 appear-animate">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-sm-6 mb-4">
                <div class="widget widget-products appear-animate" data-animation-options="{
                                    'name': 'fadeInLeftShorter',
                                    'delay': '.5s'
                                }">
                    <h4 class="widget-title border-no lh-1 font-weight-bold">Sale Products</h4>
                    <div class="products-col">
                     @foreach (var prod in Model.Take(3))
                        {
                            <div class="product product-list-sm">
                                <figure class="product-media">
                                    <a href="~/assets/product.html">
                                        <img src="~/assets/images/@prod.ProductImages.Where(i=>i.IsMain==true).FirstOrDefault().ImageName" alt="product"
                                         width="100" height="114" style="background-color: #f2f3f5;" />
                                    </a>
                                </figure>
                                <div class="product-details">
                                    <h3 class="product-name">
                                        <a href="~/assets/product.html">
                                           @prod.Name
                                        </a>
                                    </h3>
                                    <div class="product-price">
                                        <span class="price">$@prod.SellPrice</span>
                                    </div>
                                    <div class="ratings-container">
                                        <div class="ratings-full">
                                            <span class="ratings" style="width:40%"></span>
                                            <span class="tooltiptext tooltip-top"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                    </div>
                </div>
