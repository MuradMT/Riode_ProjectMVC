@model Product
@section styles{
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
}
    <div class="row">
        <div class="col-lg-12">
            <form method="post" asp-action="Create" enctype="multipart/form-data">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4>Media</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <span>Profil şəkli</span>
                                <label class="text-center w-50" asp-for="MainImg" ><img src="~/manage/assets/imgs/theme/upload.svg" alt="" /></label>
                                <input class="form-control" type="file" asp-for="MainImg" accept="image/*" />
                                <span class="text-danger" asp-validation-for="MainImg"></span>
                            </div>
                            <div class="col-md-4">
                                <span>Hover şəkli (Məcbur deyil)</span>
                                <label class="text-center w-50" asp-for="HoverImg"><img src="~/manage/assets/imgs/theme/upload.svg" alt="" /></label>
                                <input class="form-control" type="file" asp-for="HoverImg" accept="image/*" />
                                <span class="text-danger" asp-validation-for="HoverImg"></span>
                            </div>
                            <div class="col-md-4">
                                <span>Digər şəkillər</span>
                                <label class="text-center w-50" asp-for="OtherImgs"><img src="~/manage/assets/imgs/theme/upload.svg" alt="" /></label>
                                <input class="form-control" type="file" asp-for="OtherImgs" accept="image/*" multiple />
                                <span class="text-danger" asp-validation-for="HoverImg"></span>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" asp-for="Name"></label>
                            <input class="form-control" asp-for="Name" />
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" asp-for="Description"></label>
                            <input class="form-control" asp-for="Description" />
                            <span class="text-danger" asp-validation-for="Description"></span>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" asp-for="Brand"></label>
                            <input class="form-control" asp-for="Brand" />
                            <span class="text-danger" asp-validation-for="Brand"></span>
                        </div>
                        <div class="row">
                            <div class="mb-4 col-md-4">
                                <label class="form-label" asp-for="CostPrice">Maya dəyəri</label>
                                <input class="form-control" type="number" asp-for="CostPrice" />
                                <span class="text-danger" asp-validation-for="CostPrice"></span>
                            </div>
                            <div class="mb-4 col-md-4">
                                <label class="form-label" asp-for="SellPrice">Satış qiyməti</label>
                                <input class="form-control" type="number" asp-for="SellPrice" />
                                <span class="text-danger" asp-validation-for="SellPrice"></span>
                            </div>
                            <div class="mb-4 col-md-4">
                                <label class="form-label" asp-for="DiscountPercent">Endirim</label>
                                <input class="form-control" asp-for="DiscountPercent" />
                                <span class="text-danger" asp-validation-for="DiscountPercent"></span>
                            </div>
                        </div>
                     
                        <div class="row">
                          
                            <div class="mb-4 col-md-6">
                                <label class="form-label" asp-for="StockCount"></label>
                                <input class="form-control" asp-for="StockCount" />
                                <span class="text-danger" asp-validation-for="StockCount"></span>
                            </div>
                        </div>
                        <div class="row row-cols-5">
                            <div class="mb-4 col">
                                <label asp-for="CategoryId" disabled>Choose category</label>
                                <select class="mySelect2 w-100" asp-for="CategoryId" asp-items="new SelectList(ViewBag.Categories, nameof(Category.Id),nameof(Category.Name))">
                                    <option disabled selected>Məhsulun kateqoriyasını seçin</option>
                                </select>
                                <span class="text-danger" asp-validation-for="CategoryId"></span>
                            </div>
                            <div class="mb-4 col">
                                <div class="mb-4 col">
                                    <label asp-for="BadgeIds" disabled>Choose badges</label>
                                    <select multiple class="mySelect2-multiple w-100" asp-for="BadgeIds" asp-items="new SelectList(ViewBag.Badges, nameof(Badge.Id),nameof(Badge.Name))">
                                    </select>
                                    <span class="text-danger" asp-validation-for="BadgeIds"></span>
                                </div>
                            </div>
                            <div class="mb-4 col">
                                <label asp-for="ColorIds" disabled>Choose colors</label>
                                <select multiple class="mySelect2-multiple w-100" asp-for="ColorIds" asp-items="new SelectList(ViewBag.Colors, nameof(Color.Id),nameof(Color.Name))">
                                </select>
                                <span class="text-danger" asp-validation-for="ColorIds"></span>
                            </div>
                            <div class="mb-4 col">
                                
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success">Create</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @section scripts{
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $('.mySelect2').select2({
            selectOnClose: true
        });
        $('.mySelect2-multiple').select2({
            selectOnClose: false
        });
    </script>
}