

@model Badge
<form method="post" asp-action="Edit">
    <label asp-for="Name">Badge Name</label>
    <input type="text" asp-for="Name" placeholder="badge name" /> <br />
    <span class="btn-danger" asp-validation-for="Name"></span> <br />
    <input type="hidden" asp-for="@Model.Id" />
    <button class="btn btn-grd-success" type="submit">Save</button>
    <button asp-action="Index" class="btn btn-grd-danger">Cancel</button>
</form>

